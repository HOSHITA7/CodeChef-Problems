import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
         
         Scanner scanne = new Scanner(System.in);
         
         int t = scanne.nextInt();
         
         while (t --> 0) {
             
             int a = scanne.nextInt();
             
             int b = scanne.nextInt();
             
             int c = scanne.nextInt();
             
             int d = scanne.nextInt();
             
             int r1 = a + b;
             
             int r2 = c + d;
             
             if (r1 < r2)    System.out.println(r1);
             
             else   System.out.println(r2);
         }
	}
}
