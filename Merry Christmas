//

import java.util.Scanner;

public class ChristmasActivities {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        int x = sc.nextInt();

        int[] a = {1, 2, 4};

        int c = getMaxActivities(x, a);

        System.out.println(c);

        sc.close();
    }

    private static int getMaxActivities(int x, int[] a) {

        int c = 0;

        int t = 0;

        for (int i : a) {

            if (t + i <= x) {

                t += i;

                c++;
            } 
             else break;
        }

        return c;
    }
}

