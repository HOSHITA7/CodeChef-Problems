import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        
        Scanner scanne = new Scanner(System.in);
        
        int x = scanne.nextInt();
        
        int[] a = {1, 2, 4};
        
        int c = 0;
        
        int t = 0;
        
        for (int i : a) {
            
            if (t + i <= x) {
                
                t += i;
                
                c++;
            }
            
            else break;
        }
        
        System.out.println(c);
	}
}

