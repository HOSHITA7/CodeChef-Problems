import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        
        Scanner scanne = new Scanner(System.in);
        
        int x = scanne.nextInt();
        
        int y = scanne.nextInt();
        
        int z = scanne.nextInt();
        
        int res = 2 * z + y;
        
        int ans = 2 * x + 3 * y;
        
        if (res < ans)  System.out.println(res);
        
        else  System.out.println(ans);
        
	}
}
