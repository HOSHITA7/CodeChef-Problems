import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        Scanner sc = new Scanner(System.in);
        
        int b = sc.nextInt();
        
        int g = sc.nextInt();
        
        int a1 = ((4 * b) + (3 * g))/ 8 + 1;  ////   int a1 = (((4 * b) + (3 * g))/ 8) + 1;    braces are imp
        
       System.out.println(a1);
	}
}

////



import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
        Scanner sc = new Scanner(System.in);
        
        int b = sc.nextInt();
        
        int g = sc.nextInt();
        
        int a1 = (4 * b) + (3 * g) + 4;
        
        int a2 = (int) Math.ceil((double) a1 / 8);
        
       System.out.println(a2);
	}
}


